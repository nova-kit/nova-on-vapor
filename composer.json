{
    "name": "nova-kit/nova-on-vapor",
    "description": "Nova on Vapor Integration Library",
    "type": "library",
    "authors": [
        {
            "name": "Mior Muhammad Zaki",
            "email": "crynobone@gmail.com"
        }
    ],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "NovaKit\\NovaOnVapor\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NovaKit\\NovaOnVapor\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "require": {
        "php": "^8.1",
        "composer-runtime-api": "^2.2",
        "illuminate/support": "^10.34 || ^11.0",
        "laravel/vapor-core": "^2.37",
        "nova-kit/nova-queued-export-as-csv": "dev-develop",
        "symfony/polyfill-php83": "^1.28"
    },
    "require-dev": {
        "larastan/larastan": "^2.4",
        "laravel/nova": "dev-develop",
        "league/flysystem-aws-s3-v3": "^1.0 || ^3.0",
        "nova-kit/nova-devtool": "^1.3",
        "orchestra/testbench": "^8.21 || ^9.0"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://nova.laravel.com"
        }
    ],
    "extra": {
        "branch-alias": {
            "dev-develop": "2.x-dev"
        },
        "laravel": {
            "providers": [
                "NovaKit\\NovaOnVapor\\LaravelServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "lint": [
            "pint",
            "@php vendor/bin/phpstan analyse"
        ],
        "test": "@php vendor/bin/phpunit -c ./ --color",
        "serve": [
            "@build",
            "@php vendor/bin/testbench serve"
        ],
        "ci": [
            "@prepare",
            "@lint",
            "@test"
        ]
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
